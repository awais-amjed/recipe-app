<div id="general-shopping-list-page" class="content">
  <h1>General Shopping List</h1>
  <p> Amount of food items to buy:<%= @shopping_list.count %> </p>
  <p>Total value of food needed:<%= @shopping_list.reduce(0) { |sum, item| sum + (item[:food].price * item[:quantity]) } %> </p>
  <table class="table">
  <thead>
  <tr>
    <th scope="col">Food</th>
    <th scope="col">Quantity</th>
    <th scope="col">Price</th>
  </tr>
  </thead>
  <tbody>
  <% @shopping_list.each do |item| %>
    <tr>
      <td><%= item[:food].name %></td>
      <td><%= item[:quantity] %></td>
      <td>$ <%= item[:quantity] * item[:food].price %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
