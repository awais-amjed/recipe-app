<div id="food-list-page" class="container">
  <div class="d-flex justify-content-between align-items-center headline">
    <h1>Food List</h1>
    <%= link_to 'Add new food', new_food_path, class: 'btn btn-outline-info' %>
  </div>
  <table class="table">
    <thead>
        <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement Unit</th>
        <th scope="col">Unit Price</th>
        <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
        <th scope="row"> <%= food.name %> </th>
        <td> <%= food.measurement_unit %> </td>
        <td>$<%= food.price %> </td>
        <td> 
          <% if can? :destroy, food %> 
            <%= button_to "Delete", food_path(food.id ), :method => :delete, class: "del" %> 
          <% end %>
        </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>