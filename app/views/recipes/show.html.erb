<div id="recipe-details-page" class="container">
  <h1><%= @recipe.name %></h1>

  <div class="spaced-container">
    <p>Preparation time: <%= get_time_in_string_format(@recipe.preparation_time) %></p>
    <div class="form-check form-switch">
      <label class="form-check-label" for="switch-public">Public</label>
      <input class="form-check-input" type="checkbox" role="switch" id="switch-public">
    </div>
  </div>

  <p>Cooking time: <%= get_time_in_string_format(@recipe.cooking_time) %></p>
  <p><%= @recipe.description %></p>

  <div class="spaced-container">
    <button class="btn btn-dark">Generate shopping list</button>
    <button class="btn btn-success">Add Ingredient</button>
  </div>

  <hr>

  <table class="table">
    <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>1</td>
      <td>Mark</td>
      <td>Otto</td>
      <td><button>Modify</button></td>
    </tr>
    </tbody>
  </table>

  <div>
    <%= link_to "Back to recipes", recipes_path %>

    <%= button_to "Destroy this recipe", @recipe, method: :delete %>
  </div>
</div>
