<div id="recipe-details-page" class="container">
  <div class="spaced-container">
    <%= button_to "Back to recipes", recipes_path, class: 'btn btn-warning', method: :get %>
    <h1><%= @recipe.name %></h1>
    <%= button_to "Destroy this recipe", @recipe, method: :delete, class: 'btn btn-danger' %>
  </div>

  <div class="spaced-container">
    <p>Preparation time: <%= get_time_in_string_format(@recipe.preparation_time) %></p>
    <div class="form-check form-switch">
      <label class="form-check-label" for="switch-public">Public</label>
      <input class="form-check-input" type="checkbox" role="switch" id="switch-public">
    </div>
  </div>

  <p>Cooking time: <%= get_time_in_string_format(@recipe.cooking_time) %></p>
  <p><%= @recipe.description %></p>

  <div class="spaced-container">
    <button class="btn btn-dark">Generate shopping list</button>
    <%= button_to  'Add Ingredient', new_recipe_recipe_food_path(@recipe), class: 'btn btn-success', method: :get %>
  </div>

  <hr>

  <table class="table">
    <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @recipe_foods.each do |recipe_food| %>
      <tr>
        <td><%= recipe_food.food.name %></td>
        <td><%= recipe_food.quantity %></td>
        <td>$ <%= recipe_food.quantity * recipe_food.food.price %></td>
        <td>
          <%= button_to 'Remove', recipe_recipe_food_path(@recipe, recipe_food), class: 'btn btn-danger', method: :delete %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
